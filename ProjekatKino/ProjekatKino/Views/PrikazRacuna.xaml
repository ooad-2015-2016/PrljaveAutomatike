<Page
    x:Class="ProjekatKino.Views.PrikazRacuna"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjekatKino.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="textBlock" Height="25" Margin="0,10,0,0" TextWrapping="Wrap" Text="Račun" VerticalAlignment="Top" Width="56" FontSize="18.667" FontWeight="Bold"/>
        <TextBox x:Name="textBoxUkupnaCijena" Height="47" Margin="10,53,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="340" TextAlignment="Right" FontSize="24" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False" HorizontalContentAlignment="Right" IsHitTestVisible="False" IsSpellCheckEnabled="False" IsTabStop="False" IsTextPredictionEnabled="False"/>
        <Button x:Name="buttonZakljuciRacun" Content="Zaključi račun" HorizontalAlignment="Stretch" Height="37" Margin="181,0,10,10" VerticalAlignment="Bottom" Width="167" Background="#FF1DA1F2" Foreground="White" Click="buttonZakljuciRacun_Click"/>
        <Button x:Name="buttonPonistiRacun" Content="Poništi račun" HorizontalAlignment="Stretch" Height="37" Margin="10,0,183,10" VerticalAlignment="Bottom" Width="167" Background="#FF1DA1F2" Foreground="White" Click="buttonPonistiRacun_Click"/>
        <Button x:Name="buttonDodajHranuIPice" Content="Dodaj hranu i/ili piće" HorizontalAlignment="Stretch" Height="37" Margin="10,114,10,0" VerticalAlignment="Top" Background="#FF1DA1F2" Foreground="White" Click="buttonDodajHranuIPice_Click" Width="340"/>
        <ComboBox x:Name="comboBoxPlacanje" HorizontalAlignment="Center" Height="35" Margin="0,199,0,0" VerticalAlignment="Top" Width="339" SelectionChanged="comboBoxPlacanje_SelectionChanged"/>
        <TextBlock x:Name="textBlockPlacanje" HorizontalAlignment="Center" Height="22" Margin="0,172,0,0" TextWrapping="Wrap" Text="Način plaćanja" VerticalAlignment="Top" Width="197" TextAlignment="Center"/>
        <TextBox x:Name="textBoxRfid" HorizontalAlignment="Center" Height="13" Margin="0,290,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="340" PlaceholderText="Broj kartice"/>

    </Grid>
</Page>
